@model BlogDapper.Models.Etiqueta

@{
    ViewData["Title"] = "Editar Etiqueta";
}

<h1>Editar Etiqueta</h1>

<hr />
<div class="row bg-light border p-4">
    <div class="col-4 offset-4">
        <form asp-action="Editar">

            <!--Se envía el id de la etiqueta oculto-->
            <input type="hidden" asp-for="IdEtiqueta" />

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="NombreEtiqueta" class="control-label"></label>
                <input asp-for="NombreEtiqueta" class="form-control" placeholder="Ingresa el nombre de la etiqueta" />
                <span asp-validation-for="NombreEtiqueta" class="text-danger"></span>
            </div>

            <div class="form-group row mt-4">
                <div class="col-6">
                    <input type="submit" value="Editar Etiqueta" class="btn btn-primary form-control" />
                </div>

                <div class="col-6">
                    <a asp-action="Index" class="btn btn-warning form-control">Volver a lista</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
